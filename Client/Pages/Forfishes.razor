@page "/forfishes"
<div class="jumbotron">
@for (int i = 0; i < Fishes.Count; i++)
{<div class="list-group mb-3">
            <div class="row">
                <div class="col-md-3">
                    <img src="@Fishes[i].FishImage" class="img-thumbnail" alt="" width="200px" height="200px">
                </div>
                <div class="col-md-9">
                    <h5 class="text-center">
                        Especie de pez: <small class="text-muted">@Fishes[i].FishSpecie</small>
                    </h5>
                    <blockquote class="blockquote text-center">
                        Descripción:
                        <small class="text-muted">@Fishes[i].DescriptionSpecie</small>
                        <br>                        
                        Tipo de agua en la que habita:
                        <small class="text-muted">@Fishes[i].TypeOfWater</small>
                        <footer class="blockquote-footer">
                            <cite>@Fishes[i].PublicationDate.ToString("dd/MM/yyyy")</cite>
                        </footer>
                    </blockquote>
                </div>
            </div>
        </div>    
}
</div>
